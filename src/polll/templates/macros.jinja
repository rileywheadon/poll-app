{% macro buttons(feed="visible", history="visible", create="visible", myPolls="visible", logout="visible") %}
<a class="{{feed}} text-nord-0 dark:text-nord-6 h-10 flex justify-center items-center" href="{{ url_for('home.feed') }}">
  <span class="{% if session.tab == 'feed' %} font-black {% endif %}">
      Feed
    </span>
    <i class="ml-2 fa-solid fa-fire"></i>
  </a>

  <a class="{{history}} text-nord-0 dark:text-nord-6 h-10 flex justify-center items-center" href="{{ url_for('home.history') }}">
    <span class="{% if session.tab == 'history' %} font-black {% endif %}">
      History
    </span>
    <i class="ml-2 fa-solid fa-book"></i>
  </a>

  <a class="{{create}} text-nord-0 dark:text-nord-6 h-10 flex justify-center items-center" href="{{ url_for('home.create') }}">
    <span class="{% if session.tab == 'create' %} font-black {% endif %}">
      Create
    </span>
    <i class="ml-2 fa-solid fa-pen underline"></i>
  </a>

  <a class="{{myPolls}} text-nord-0 dark:text-nord-6 h-10 flex justify-center items-center" href="{{ url_for('home.mypolls') }}">
    <span class="{% if session.tab == 'mypolls' %} font-black {% endif %}">
      {{session.user.username}}
    </span>
    <i class="ml-2 fa-solid fa-user"></i>
  </a>

  <a class="{{logout}} text-nord-0 dark:text-nord-6 h-10 flex justify-center items-center"
      href="{{ url_for('auth.logout') }}"
      hx-boost="false">
    <span>
      Log Out
    </span>
    <i class="ml-2 fa-solid fa-arrow-left"></i>
  </a>
{% endmacro%}

