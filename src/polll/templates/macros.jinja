{% macro buttons(showIcons=true, feed="visible", history="visible", create="visible", myPolls="visible") %}

<a class="{{feed}} text-nord-0 dark:text-polll-blue h-10 flex justify-center items-center pt-2 pb-6 md:pb-12 font-light" href="{{ url_for('home.feed') }}">
    <span class="{% if session.tab == 'feed' %} text-polll-green {% endif %}">
        {% if showIcons %} Feed {% endif %}
        <i class="ml-2 text-xl md:text-base fa-solid fa-fire"></i>
    </span>
</a>

<a class="{{history}} text-nord-0 dark:text-polll-blue h-10 flex justify-center items-center pt-2 pb-6 md:pb-12 font-light" href="{{ url_for('home.history') }}">
    <span class="{% if session.tab == 'history' %} text-polll-green {% endif %}">
        {% if showIcons %} History {% endif %}
        <i class="ml-2 text-xl md:text-base fa-solid fa-book"></i>
    </span>
</a>

<a class="{{create}} text-nord-0 dark:text-polll-blue h-10 flex justify-center items-center pt-2 pb-6 md:pb-12 font-light" href="{{ url_for('home.create') }}">
    <span class="{% if session.tab == 'create' %} text-polll-green {% endif %}">
        {% if showIcons %} Create {% endif %}

        <i class="ml-2 text-xl md:text-base fa-solid fa-pen underline"></i>
    </span>
</a>

<a class="{{myPolls}} text-nord-0 dark:text-polll-blue h-10 flex justify-center items-center pt-2 pb-6 md:pb-12 font-light" href="{{ url_for('home.mypolls') }}">
    <span class="{% if session.tab == 'mypolls' %} text-polll-green {% endif %}">
        {% if showIcons %} {{session.user.username}} {% endif %}
        
        <i class="ml-2 text-xl md:text-base fa-solid fa-user"></i>
    </span>
</a>

{% endmacro %}

{%macro filter_btn(col, colDark, text, bf="font-light") %}
  <button id="{{text}}" onclick="toggle_filter_button('{{col}}', '{{text}}')" class="bg-{{col}} text-nord-0 border-2 border-nord-3 dark:bg-{{colDark}} dark:border-nord-2 text-nord-0 rounded-lg w-9 sm:w-10 md:w-11 lg:w-12 h-6 md:h-7 lg:h-8 m-1 flex justify-center items-center {{bf}}">{{text}}</button>
{%endmacro%}